<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Clothing Inventory</title>

    <!-- Materialize CSS and Icons-->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="/stylesheets/clothesStyle.css">

</head>

<body>
         
    <!-- Actual page content! -->
    <div class="container">
        <div class="section" id="clothingList">
            <h1>Clothing inventory:</h1>
            <table>
                <thead>

                    <tr>
                        <th>Item</th>
                        <th>Brand</th>
                        <th>Location</th>
                    
                       
                    </tr>

                </thead>
                <tbody>
                  <% for(let i = 0; i < inventory.length; i++) { %>
   
                    <tr>
                        <td><%= inventory[i].item %></td>
                        <td><%= inventory[i].brand %></td>
                        <td><%= inventory[i].location %></td>
            
                        <td>
                            <a class="btn-small waves-effect waves-light" href="/clothes/item/<%= inventory[i].id %>"><i
                                    class="material-icons right">edit</i>Info/Edit</a>
                            <a class="btn-small waves-effect waves-light red" href="/clothes/item/<%= inventory[i].id %>/delete"><i
                                    class="material-icons right">delete</i>Delete</a>
                        </td>
                    </tr>
                    <% } %>
                    

                </tbody>
            </table>
        </div>

        <div class="section" id="clothesAdd">
            <h2>Add an item:</h2>
            <form method = "post" >
                <div class="row">
                    <div class="input-field col s6">
                        <label for="name">Item Name:</label>
                        <input type="text" name="name" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="brand">Item Brand:</label>
                        <input type="text" name="brand" class="validate" data-length="32" required>
                    </div>
                    <div class="input-field col s6">
                        <label for="location">Item Location:</label>
                        <input type="text" name="location" class="validate" data-length="32" required>
                    </div>
                    
                </div>
                <button class="btn waves-effect waves-light" type="submit"><i
                        class="material-icons right">send</i>Submit</button>
            </form>
        </div>
    </div>

    <!-- Materialize JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>

    <!-- initialize Materialize elements -->
    <script> M.AutoInit();</script>

</body>

</html>